<script>

    function gotoClientSearchPage() {
        var winPar = "width=400,height=600,toolbar=no, menubar=no,scrollbars=no,resizable=yes,location=no,directories=no,status=no";
       window.open("@Url.Action("", "ClientSearch")", "Quick Search", winPar);
    } 
    function goToPPMICreate() {
        var winPar = "width=1200,height=600,toolbar=no, menubar=no,scrollbars=no,resizable=yes,location=no,directories=no,status=no";
       window.open("../PPMIPage/Edit?pageAction=create", "", winPar);
    }
    function goToclientInformationCreate() {
         var winPar = "width=1200,height=600,toolbar=no, menubar=no,scrollbars=no,resizable=yes,location=no,directories=no,status=no";
        window.open("../ClientSearch/clientInformation?pageAction=create", "", winPar);
    } 
     function goToLoanRecordCreate() {
         var winPar = "width=1200,height=600,toolbar=no, menubar=no,scrollbars=no,resizable=yes,location=no,directories=no,status=no";
        window.open("../LoanInformationPage/Index?pageAction=create", "", winPar);
    }

</script>

