@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_plain_Layout.cshtml";
}

<div class="centralContainer">
    <h1>Wheelchair menu</h1>
    <a href="" onclick="goToclientInformationCreate()" id="gotoClientSearchPage" target="_self" class="bigButton">New Client Record</a>
    <a href="" onclick="goToLoanRecordCreate()" id="gotowheelChairInformationPage" target="_self" class="bigButton">New Loan Record</a>
